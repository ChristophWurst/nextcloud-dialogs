{
  "name": "@nextcloud/dialogs",
  "version": "4.1.0",
  "description": "Nextcloud dialog helpers",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },
  "scripts": {
    "build:doc": "typedoc --excludeExternals --out dist/doc lib && touch dist/doc/.nojekyll",
    "build": "NODE_ENV=production rollup -c",
    "watch": "NODE_ENV=development rollup -c --watch",
    "stylelint": "stylelint src",
    "stylelint:fix": "stylelint src --fix",
    "check-types": "tsc --noEmit",
    "l10n:extract": "node build/extract-l10n.js"
  },
  "keywords": [
    "nextcloud"
  ],
  "homepage": "https://github.com/nextcloud/nextcloud-dialogs#readme",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/nextcloud/nextcloud-dialogs"
  },
  "dependencies": {
    "@nextcloud/l10n": "^2.2.0",
    "@nextcloud/typings": "^1.7.0",
    "core-js": "^3.31.0",
    "toastify-js": "^1.12.0"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/cli": "^7.22.6",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@nextcloud/browserslist-config": "^2.3.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.1.2",
    "babel-loader-exclude-node-modules-except": "^1.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "gettext-extractor": "^3.7.2",
    "gettext-parser": "^7.0.1",
    "postcss-url": "^10.1.3",
    "rollup": "^3.26.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.63.6",
    "tslib": "^2.6.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "browserslist": [
    "extends @nextcloud/browserslist-config"
  ],
  "engines": {
    "node": "^20.0.0",
    "npm": "^9.0.0"
  }
}
