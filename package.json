{
  "name": "@nextcloud/dialogs",
  "version": "4.1.0",
  "description": "Nextcloud dialog helpers",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    },
    "./legacy.js": {
      "types": "./dist/legacy.d.ts",
      "import": "./dist/legacy.mjs",
      "require": "./dist/legacy.cjs"
    }
  },
  "scripts": {
    "prepare": "npm run build",
    "build:doc": "typedoc --excludeExternals --out dist/doc lib && touch dist/doc/.nojekyll",
    "build": "vite --mode production build",
    "dev": "vite --mode development build",
    "dev:watch": "vite --mode development build --watch",
    "stylelint": "stylelint src",
    "stylelint:fix": "stylelint src --fix",
    "check-types": "tsc --noEmit",
    "l10n:extract": "node build/extract-l10n.js"
  },
  "keywords": [
    "nextcloud"
  ],
  "homepage": "https://github.com/nextcloud/nextcloud-dialogs#readme",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/nextcloud/nextcloud-dialogs"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "vue": "^2.7.14"
  },
  "dependencies": {
    "@nextcloud/files": "^3.0.0-beta.14",
    "@nextcloud/l10n": "^2.2.0",
    "@nextcloud/router": "^2.1.2",
    "@nextcloud/typings": "^1.7.0",
    "@nextcloud/vue": "^8.0.0-beta.2",
    "@types/toastify-js": "^1.12.0",
    "@vueuse/core": "^10.3.0",
    "toastify-js": "^1.12.0",
    "vue-frag": "^1.4.3",
    "vue-material-design-icons": "^5.2.0",
    "webdav": "^5.2.3"
  },
  "devDependencies": {
    "@nextcloud/browserslist-config": "^2.3.0",
    "@nextcloud/eslint-config": "^8.3.0-beta.2",
    "@nextcloud/vite-config": "^1.0.0-beta.18",
    "@types/gettext-parser": "^4.0.2",
    "@vue/tsconfig": "^0.4.0",
    "gettext-extractor": "^3.8.0",
    "gettext-parser": "^7.0.1",
    "sass": "^1.64.2",
    "tslib": "^2.6.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  },
  "engines": {
    "node": "^20.0.0",
    "npm": "^9.0.0"
  },
  "browserslist": [
    "extends @nextcloud/browserslist-config"
  ]
}
